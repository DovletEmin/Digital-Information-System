# Environment configuration for SMU Digital Library
# Copy this file to .env and fill in the actual values

# ===========================================
# General Django Settings
# ===========================================
DJANGO_ENV=dev  # Options: dev, prod
SECRET_KEY=your-secret-key-here-generate-a-strong-one
DEBUG=True

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_DB=smu
POSTGRES_USER=smu
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_HOST=db
POSTGRES_PORT=5432
DJANGO_CONN_MAX_AGE=600

# ===========================================
# Security Settings (Production)
# ===========================================
# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Comma-separated list of CORS allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===========================================
# Redis & Celery Configuration
# ===========================================
REDIS_URL=redis://redis:6379/1
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_TASK_ALWAYS_EAGER=False

# ===========================================
# Elasticsearch Configuration
# ===========================================
ELASTICSEARCH_URL=http://elasticsearch:9200

# ===========================================
# Email Configuration (Production)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@smu.edu.tm
ADMIN_EMAIL=admin@smu.edu.tm

# ===========================================
# Optional Development Tools
# ===========================================
# Enable django-silk for SQL profiling
DJANGO_ENABLE_SILK=1

# Enable SQL debug logging
DJANGO_SQL_DEBUG=1

# ===========================================
# Monitoring (Production)
# ===========================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
